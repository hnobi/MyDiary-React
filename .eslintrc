{
  "root": true,
  "parser": "babel-eslint",
  "extends": ["airbnb-base", "plugin:react/recommended"],
  "plugins": ["react"],
  "env": {
    "node": true,
    "es6": true,
    "mocha": true,
    "browser": true,
    "commonjs": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "rules": {
    "one-var-declaration-per-line": 0,
    "comma-dangle": 0,
    "import/no-named-as-default": 0,
    "import/no-unresolved": 0,
    "class-methods-use-this": 0
  },
  "overrides": [
    {
      "files": "*.test.js",
      "rules": {
        "no-unused-expressions": "off"
      }
    }
  ]
}
